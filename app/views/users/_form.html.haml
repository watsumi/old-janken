= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :uuid_digest
    = f.text_field :uuid_digest
  .field
    = f.label :character_id
    = f.number_field :character_id
  .actions
    = f.submit 'Save'

= form_for user do |f|
  - if user.errors.any?
    #error_explanation
      %h2= "#{pluralize(user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :character_id
    = f.select :character_id, options_for_select(characters_for_select)
  .actions
    = f.submit 'Save'

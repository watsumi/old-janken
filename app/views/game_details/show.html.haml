= render "background" do
  - if @game_details.size > 1 && @game_details.size.odd?
    = render partial: "finish_modal", locals: { game_details: @game_details }
  - else
    = render 'flash', message: 'guestのターン中は表示できません。'

  = link_to 'ゲームに戻る', game_path(@game), class: 'position-absolute bottom-0 mb-5 btn btn-primary w-25'

%button.btn.btn-light.position-fixed.top-0.end-0.m-3{ type: "button", 'data-bs-toggle': "offcanvas", 'data-bs-target': "#offcanvas", 'aria-controls': "offcanvasExample" }
  %i.bi.bi-list
